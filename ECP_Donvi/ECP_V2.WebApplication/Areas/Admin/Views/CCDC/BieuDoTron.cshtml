@{
    ViewBag.Title = "Biểu đồ tròn";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<style>
    .container-fluid {
        padding-left: 0;
        padding-right: 0;
    }

    .content-body {
        padding: 5px;
    }
</style>

<div class="block-fluid">
    <div class="panel panel-visible">
        <div class="panel-heading br-b-n">
            <div class="panel-title hidden-xs">
                <div class="panel-actions">

                </div>
                <span class="glyphicon glyphicon-tasks"></span> @ViewBag.Title
            </div>
        </div>
        <div class="panel-body pn">
            <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row show-grid">
                    <div class="listRolesName list" style="margin-top: 5px;">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {

        //Menu Collapsed Layout
        $('html').addClass('sidebar-left-collapsed');


        Paging();

    });

    function Paging() {
        loading('Đang tải dữ liệu...', 1);
        $("#preloader").unbind("click");
        $('#preloader').click(function () {
            unloading();
        })

        var scriptUrl = "/Admin/CCDC/ListBieuDoTron";
        $.ajax({
            url: scriptUrl,
            data: {
                MaNhom:@ViewBag.MaNhom,
            },
            type: 'GET',
            dataType: 'html',
            async: false,
            success: function (data) {
                $(".list").html("");
                $(".list").html(data);
                unloading();
            },
            error: function () {
                unloading();
            }
        });
    }

</script>