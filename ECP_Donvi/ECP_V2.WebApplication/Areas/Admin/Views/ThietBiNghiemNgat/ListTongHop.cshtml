@model List<ECP_V2.Business.Repository.tbnn_ThongKeoLoaiThietBiModel>

<script type="text/javascript">

</script>

<div class="table-responsive">
    <table cellspacing="0" id="dtGridPhienLV" class="table table-bordered table-congviec table-striped mb-none dataTable no-footer" role="grid" aria-describedby="datatable-default_info">
        <thead>
            <tr>
                <th style="text-align:center;max-width:50px;min-width:50px;width:50px">
                    STT
                </th>
                <th style="text-align:center">
                    Tên thiết bị
                </th>
                <th style="text-align:center;max-width:150px;min-width:150px;width:150px">
                    Số lượng
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">@(Model.IndexOf(item) + 1)</td>
                    <th>@item.TenLoai</th>
                    <th style="text-align:center">
                        @string.Format("{0:n0}", item.SoLuong)
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>
