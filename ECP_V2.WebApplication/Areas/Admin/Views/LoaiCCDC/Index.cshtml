    function DeleteModalConfirmAll() {
        var count = 0;
        var items = document.getElementsByClassName('chkbox');

        for (i = 0; i < items.length ; i++)
            if (items[i].checked)
                count++;

        if (count == 0) {
            new PNotify({
                title: 'Thông báo',
                text: 'Bạn chưa chọn dòng để xóa !',
                type: 'error'
            });
            return;
        }

        var str = '';
        for (i = 0; i < items.length ; i++) {
            if (items[i].checked) {
                str = str + items[i].value + ',';
            }
        }

        $.ajax({
            type: "POST",
            url: "/LoaiCCDC/DeleteAll",
            dataType: "json",
            data: {
                id: str
            },
            async: true,
            success: function (json) {
                if (json.type == "success") {
                    new PNotify({
                        title: 'Thông báo',
                        text: json.mess,
                        type: 'success'
                    });
                    Paging($('.pagination a.paginate_active').text(), $("#drlPageSize").val(), $('#txtSearch').val());
