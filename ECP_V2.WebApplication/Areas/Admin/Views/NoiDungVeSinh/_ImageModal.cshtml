<div id="image-modal" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title title-popup-modal">Hình ảnh 5S</h4>
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true" style="font-size:40px; color:red; margin-top:-30px">×</button>
            </div>
            <div class="modal-body">
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li><a class="nav-link active" data-toggle="tab" href="#tab-1" id="tabTruoc"> Trước 5S</a></li>
                        <li><a class="nav-link" data-toggle="tab" href="#tab-2" id="tabSau">Sau 5S</a></li>
                    </ul>
                    <div class="tab-content" style="min-height:100px">
                        <input id="hid-noidungId" value="1" type="hidden" />
                        <input id="hid-type" value="1" type="hidden" />
                        <div id="tab-1" class="tab-pane active">
                            <div class="wrapper wrapper-content animated fadeInRight">
                                <div class="ibox ">
                                    <div class="ibox-content">
                                        <div class="list-truoc-5s">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="tab-2" class="tab-pane">
                            <div class="wrapper wrapper-content animated fadeInRight row" id="History" style="padding-bottom:0px">
                                <div class="ibox" style="width:100%">
                                    <div class="ibox-content" style="width:100%">
                                        <div class="list-sau-5s">

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group row" style="margin-top:30px; margin-bottom:0px">
                    <div class=" col-sm-11">

                        <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger float-right" style="float:right"><i class="fa fa-times" style="margin-right:6px"></i>Đóng</button>
                        <button type="button" class="btn btn-success" id="btnAddImage" style="height:38px; float:right; margin-right:15px; height:34px">Thêm mới</button>
                        <input type="file" name="txtFile" accept="image/*" class="form-control custom-file-input" id="txtFile" multiple hidden="hidden" style="display:none">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="image-template" type="x-tmpl-mustache">
    <div class="col-md-4 row" style="margin-bottom:50px; height:230px; text-align:center">
        <a data-fancybox="gallery" data-id='{{Id}}' style="height:220px" class="pop imageDetail" href="{{Image}}" data-caption="{{Name}}"><img  data-id="{{Id}}" class="col-md-12" src="{{Image}}" alt="" style="margin-bottom:20px; max-height:170px"></a>
        <label class="col-md-9 col-form-label" style="height:30px">{{Date}}</label>
        <a href="#" data-id="{{Id}}" style="height:30px" class="col-md-3 btn btn-danger btn-deleteImage" title="Xóa">Xóa</a>
    </div>
</script>