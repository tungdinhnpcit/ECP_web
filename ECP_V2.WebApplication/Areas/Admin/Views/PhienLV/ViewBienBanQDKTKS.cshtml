            if (match) {
                var weekNumber = parseInt(match[1]);  // Tuần thứ mấy
                var year = parseInt(match[2]);  // Năm

                // Tính ngày bắt đầu của tuần (Thứ Hai)
                var startOfWeek = getStartOfWeek(year, weekNumber);
                var endOfWeek = new Date(startOfWeek);
