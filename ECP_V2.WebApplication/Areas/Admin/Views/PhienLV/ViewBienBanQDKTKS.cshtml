                        $('#TongSoKTKS_HinhAnh').text(data.TongSoKTKS_HinhAnh);
                        $('#TyLePhanTram').text(data.TyLePhanTram);
                    } else {
                        console.log("Không có dữ liệu:", response.message);
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Lỗi AJAX:", error);
                }
            });
        }, 2000);
