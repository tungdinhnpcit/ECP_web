                                                                }
                                                            }

                                                            <td style="text-align: center;vertical-align: middle;">
                                                                <span class="text-center">
                                                                    @{ Html.RenderAction("CountImage", "PhienLV", new { id = item.Id }); }
                                                                </span>
                                                            </td>
                                                            <td class="actions" style="width:10%">
                                                                <a id="Detail_@item.Id" href="#modalAnimDetail" title="Chi Tiết Phiên Làm Việc" class="on-default remove-row detail"><i class="fa fa-book" style="font-size: 25px; cursor: pointer"></i></a>
                                                                <a id="Detail_@item.Id" href="#modalAnimDetailPCT" title="Chi Tiết Phiếu Công Tác" class="on-default remove-row detailPCT"><i class="fa fa-file-powerpoint-o" style="font-size: 25px; cursor: pointer"></i></a>
                                                                <a id="Comment_@item.Id" href="#modalAnimComment" title="Thêm nhận xét" class="on-default remove-row comment">
                                                                    <i class="fa fa-comments-o" style="font-size: 30px; cursor: pointer">
                                                                    </i>
                                                                    @if (comments != null && comments.Count() > 0)
                                                                    {
                                                                        <span>@comments.Count()</span>}
                                                                </a>
                                                                @if (User.IsInRole("Admin"))
                                                                {
                                                                    <a id="Image_@item.Id" href="~/Images/Detail?phienlvid=@item.Id" target="_blank" title="Hình ảnh phiên làm việc" class="on-default remove-row"><i class="fa fa-picture-o" style="font-size: 25px; cursor: pointer"></i></a> }
                                                                else
                                                                {
                                                                    <a id="Image_@item.Id" href="~/Admin/PhienLV/DetailHinhAnhPhienLv?PhienLvId=@item.Id" target="_blank" title="Hình ảnh phiên làm việc" class="on-default remove-row"><i class="fa fa-picture-o" style="font-size: 25px; cursor: pointer"></i></a>}
                                                                @if (User.IsInRole("DuyetViec"))
                                                                {
                                                                    if (item.NguoiDuyet == null && item.TrangThai == 1)
                                                                    {
                                                                        <a href="#modalAnimDuyet" id="Duyet_@item.Id" title="Duyệt lịch làm việc" class="on-editing cancel-row Duyet"><i class="fa fa-check-circle" style="font-size:25px;cursor:pointer"></i></a>}
                                                                }
                                                                @if (User.IsInRole("DuyetNPC"))
                                                                {
                                                                    if ((item.TrangThai == 2 || item.TrangThai == 3) && (item.IsChuyenNPC == false || item.IsChuyenNPC == null))
                                                                    {
                                                                        <a href="#modalAnimNPC" id="Duyet_@item.Id" title="Duyệt NPC" class="on-editing cancel-row Duyet"><i class="fa fa-forward" style="font-size:25px;cursor:pointer"></i></a>}
                                                                }
                                                                <a href="/UploadImagePhienLV/Index/@item.Id" class="glyphicon glyphicon-upload" style="font-size: 30px;" title="Tải ảnh cho phiên làm việc này"></a>
                                                                @if ((item.TrangThai != 2 && item.TrangThai != 3 && item.TrangThai != 7) || User.IsInRole("Admin"))
                                                                {
                                                                    <a id="Delete_@item.Id" href="#modalAnimDelete" title="Xóa Phiên Làm Việc" class="on-default remove-row delete"><i class="fa fa-trash-o" style="font-size: 25px; cursor: pointer"></i></a>}
                                                                @if ((item.TrangThai == 3) && (User.IsInRole("Admin")))
                                                                {
                                                                    <a id="UpdateVuaTao_@item.Id" href="#modalAnimUpdateVuaTao" title="Cập nhật công việc về vừa tạo" class="on-default updateVuaTao"><i class="fa fa-refresh" style="font-size: 25px; cursor: pointer"></i></a>}
                                                                @if (User.IsInRole("Manager"))
                                                                {
                                                                    <a id="UpdateSoPhieu_@item.Id" href="#modalAnimUpdateSoPhieu" title="Cập nhật số phiếu công tác" class="on-default updateSoPhieu"><i class="fa fa-bookmark" style="font-size: 25px; cursor: pointer"></i></a>}
                                                                @if ((item.TrangThai != 7) && (item.TrangThai != 3) && (User.IsInRole("Admin") || User.IsInRole("Manager")))
                                                                {
                                                                    <a id="ketthuc_@item.Id" href="#modalAnimKetThuc" title="Kết thúc Phiên Làm Việc" class="on-default ketthuc"><i class="fa fa-sign-out" style="font-size: 25px; cursor: pointer"></i></a>
                                                                }
                                                                @if (item.TrangThai == 3 && item.IsCamera > 0)
                                                                {
                                                                    <a id="Camera_@item.Id" onclick="camera.viewHisCamera(@item.Id)" title="Xem lại Camera" class="on-default camera"><i class="fa fa-camera" style="font-size: 25px; color:red; cursor: pointer"></i></a>

                                                                }
                                                                else
                                                                {
                                                                    if (item.IsCamera > 0)
                                                                    {
                                                                        <a id="Camera_@item.Id" onclick="camera.viewCamera(@item.Id)" title="Xem Camera" class="on-default camera"><i class="fa fa-camera" style="font-size: 25px; cursor: pointer"></i></a>
                                                                    }

                                                                    <a id="CameraAdd_@item.Id" onclick="camera.addCamera(@item.Id)" title="Thêm Camera" class="on-default addcamera"><i class="fa fa-plus" style="font-size: 25px; cursor: pointer"></i></a>

                                                                }
                                                                
                                                            <a id="ViewSign_@item.Id" href="#modalViewKyso" title="Xem file ký" class="ViewSign"><i class="fa fa fa-cloud-download" style="font-size: 20px;color:blue; cursor: pointer"></i></a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>

        </div>


    }
    else
    {
        <h2 class="text-danger text-center">
            Vui lòng chọn đủ các điều kiện lọc !
        </h2>
    }
    <div class="rightcountload hide">
        @if (ViewBag.PhienLVTong != null)
        {
            <ol class="breadcrumbs" style="padding-right:20px">
                <li><span style="color: #fff; font-weight: bold;">Tất cả: @(ViewBag.PhienLVTong)</span></li>
                @if ((int)ViewBag.PhienLVTong > 0)
                {
                    <li><span style="color: #4cff00; font-weight: bold;">Đã xong: @(ViewBag.PhienLVDaXong)</span></li>
                    <li><span style="color: #00ffdc; font-weight: bold;">Đã duyệt: @(ViewBag.PhienLVDaDuyet)</span></li>
                    <li><span style="color: #0088cc; font-weight: bold;">Chưa duyệt: @(ViewBag.PhienLVChuaDuyet)</span></li>
                    <li><span style="color: #e46306; font-weight: bold;">Hủy bỏ: @ViewBag.PhienLVHuyBo</span></li>
                }
            </ol>
        }
    </div>
    <script>
        $(".rightcount").html($(".rightcountload").html());
    </script>

}

