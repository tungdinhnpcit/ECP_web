        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                zoom: 13,
                center: {
                    lat: 21.031438,
                    lng: 105.834648
                }
            });


            @foreach (var item in Model.Data)
            {
                @:var marker_@Model.Data.IndexOf(item) = new google.maps.Marker({ position: { lat: @item.latitude, lng: @item.longitude }, map: map });
                @:google.maps.event.addListener(marker_@Model.Data.IndexOf(item), 'click', function (e) {(new google.maps.InfoWindow({content: "@Html.Raw(item.htmlWindow)"})).open(map, marker_@Model.Data.IndexOf(item));});
            }

            
            var input = document.getElementById('pac-input');
            var autocomplete = new google.maps.places.Autocomplete(input);

            var marker = new google.maps.Marker({
                map : map,
                draggable: true
            });

            google.maps.event.addListener(marker, 'dragend', function (event) {
                latchoose=this.getPosition().lat();
                lngchoose=this.getPosition().lng();
            });

            autocomplete.addListener('place_changed',function() {
               
                marker.setVisible(false);
                var place = autocomplete.getPlace();
                if (!place.geometry) {
                   
                    return;
                }

                map.fitBounds(place.geometry.viewport);
                marker.setPosition(place.geometry.location);
                marker.setVisible(true);

                latchoose=place.geometry.location.lat();
                lngchoose=place.geometry.location.lng();
            });
        }

        function GoToMarket(id,lat,lng)
        {
            map.setZoom(19);
            map.panTo( new google.maps.LatLng( lat, lng ) );
        }

        function SetLocation()
        {
            if($("#pac-input").val()=='')
            {
                new PNotify({
                    title: 'Thông báo',
                    text: 'Địa chỉ tìm kiếm không được để trống !',
                    type: 'error'
                });
                $("#pac-input").focus();
                return;
            }
            //alert(latchoose+'-'+lngchoose);
            //return;

            var listId = [];
            var items = document.getElementsByClassName('chkbox');
            for (i = 0; i < items.length; i++) {
                if (items[i].checked) {
                    listId.push(items[i].value);
                }
            }

            if (listId.length == 0) {
                alert("Vui lòng chọn phiện làm việc !");

            }
            else if (items.length > 0) {
                loading('Đang xử lý...', 1);

                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: '/Admin/PhienLV/UpdateDiaDiem',
                    data: JSON.stringify({
                        "listId": listId,
                        "lat":latchoose,
                        "lng":lngchoose,
                        "DiaDiem":$("#pac-input").val()
                    }),
                    dataType: "json",
                    beforeSend: function () {//alert(id);
                    },
                    success: function (data) {
                        unloading();
                        if (data != null) {

                            $.each(data, function (index, item) {

                                if (item.success) {
                                    new PNotify({
                                        title: 'Thông báo!',
                                        text: item.responseText,
                                        type: 'success'
                                    });
                                } else {
                                    new PNotify({
                                        title: 'Thông báo!',
                                        text: 'Lỗi : ' + item.responseText,
                                        type: 'error'
                                    });
                                }

                            });

                            Paging(1, 200, $("#txtSearch").val(), $('#cmbTCPhien').val(), $('#cmbTTPhienCatDien').val(), $('#cmbTTPhienTiepDia').val(), $('#cmbTTPhienKhac').val(), $('#GioBd').val(), $('#GioKt').val(), $('#cmbDonViID').val(), $('#cmbPhongBan').val(), $('#cmbDuyetNPC').val());

