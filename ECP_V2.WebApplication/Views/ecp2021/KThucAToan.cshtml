
@{
    ViewBag.Title = "KThucAToan";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h4>Từ điển tra cứu kiến thức an toàn điện</h4>


<input type="text" value="@Session["baseurl"]" id="baseurl" style="display:none">
<input type="text" value="@Session["UserId"]" id="UserId" style="display:none">
<input type="text" value="@Session["UserName"]" id="UserName" style="display:none">

<div class="col-md-4">
    <input class="form-control" type="text" placeholder="Tìm kiếm" />
    <div id="tree"></div>

</div>

<div class="col-md-8">
    <a onclick="kt_atoan.add()" id="btnadd" class="btn btn-success btn-sm"><i class="fa fa-file l-o mr-5"></i>Tạo chủ đề</a>
    <a onclick="kt_atoan.addbuoc()" id="btnaddbuoc" class="btn btn-success btn-sm"><i class="fa fa-file l-o mr-5"></i>Tạo câu hỏi</a>
    <div>
        <div style="text-align:center;font-weight:bold;font-size:16px"> Thông tin câu hỏi</div>
        <form>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Câu hỏi</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="lblbuoc" value="">
                </div>
            </div>

            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Trả lời</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="lblnoidung" value="">
                </div>
            </div>

        </form>
    </div>
</div>

<link href="~/Scripts/fancytree/skin-win8/ui.fancytree.css" rel="stylesheet" />
<link href="~/Scripts/fancytree/skin-win8/jquery-ui.css" rel="stylesheet" />
@section scriptsAdd {
    <script src="~/Scripts/fancytree/jquery-ui.min.js"></script>
    <script src="~/Scripts/fancytree/jquery.fancytree-all.min.js"></script>
    @*nghiệp vụ*@
    <script src="~/Scripts/ktgs/js/util.js"></script>
    <script src="~/Scripts/ktgs/js/service.js"></script>
    <script src="~/Scripts/ktgs/js/kt_atoan.js"></script>
}

<style>
    .fancytree-active span.fancytree-title {
        background-color: #a4f7ff;
        border-color: #dedede;
    }
    }
</style>