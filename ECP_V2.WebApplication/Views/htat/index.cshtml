        <div style="text-align:center;font-weight:bold;font-size:16px"> Thông tin </div>
        <form>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Bước</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="lblbuoc" value="">
                </div>
            </div>

            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Nội dung</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="lblnoidung" value="">
                </div>
            </div>

            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">File media</label>
                <div class="col-sm-10" id="divmedia">

                </div>
            </div>

        </form>

